#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

case "$1" in
  -v|--version)
    version="$2"
esac

# Create additional directories required by the diy cartridge
mkdir -p ${OPENSHIFT_PYNADO_DIR}/run/
mkdir -p ${OPENSHIFT_PYNADO_DIR}/{pid,socket}



# make sure the static dir exists
client_result "Disclaimer:This will automatically download MiniCondo from continuum.io , 
then it Installs:  Tornado , PyMongo . Will take around 2-3 mins+"