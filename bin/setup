#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

case "$1" in
  -v|--version)
    version="$2"
esac

# Create additional directories required by the diy cartridge
mkdir -p ${OPENSHIFT_PYNADO_DIR}/run/
mkdir -p ${OPENSHIFT_PYNADO_DIR}/{pid,socket}



# make sure the static dir exists


client_result "Disclaimer: On first push , this will automatically download Python from continuum and Anaconda Install:  Tornado , PyMongo , it will take around 10 mins+"